
<AuthorizeView>
    <Authorized>
        <TelerikButton 
            @onclick="HandleProfile"
            FillMode="@ThemeConstants.Button.FillMode.Link"
            Size="@ThemeConstants.Button.Size.Large" 
            Icon="@SvgIcon.User">
            Hello, @context.User.Identity?.Name!
        </TelerikButton>
        <TelerikButton 
            @onclick="HandleLogout"
            FillMode="@ThemeConstants.Button.FillMode.Link"
                       Size="@ThemeConstants.Button.Size.Large">
            <TelerikSvgIcon Icon="@SvgIcon.Logout" /> Logout
        </TelerikButton>
    </Authorized>
    <NotAuthorized>
        <TelerikButton
            @onclick="HandleLogin" 
            FillMode="@ThemeConstants.Button.FillMode.Link"
                       Size="@ThemeConstants.Button.Size.Large">
            <TelerikSvgIcon Icon="@SvgIcon.Login" /> Login
        </TelerikButton>
    </NotAuthorized>
</AuthorizeView>
